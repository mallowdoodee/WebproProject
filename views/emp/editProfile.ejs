<style>
    body {
        background-color: #F0E9E9;
    }

    .container {
        width: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding: 20px;
        padding-top: 10px;
        box-sizing: border-box;
    }

    .form-container {
        padding: 20px;
        border-radius: 8px;
        width: 350px;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        margin-bottom: 10px;
    }

    label {
        font-size: 22px;
        font-weight: bold;
        margin-bottom: 3px;
        color: #7A2E2E;
        font-family: var(--font-secondary);
    }

    .form-group input,
    textarea {
        padding: 8px;
        border: 1px solid #E5CFC5;
        border-radius: 3px;
        width: 400px;
        margin-bottom: 12px;
        background-color: rgba(255, 255, 255, 0.9);
        padding-left: 12px;
    }

    textarea {
        resize: none;
        height: 75px;
    }

    .error-message {
        font-size: 12px;
        margin-top: 5px;
    }

    a {
        text-decoration: none;
    }

    .btn {
        width: 100px;
        background-color: #D8A273;
        color: white;
        border: none;
        padding: 10px;
        border-radius: 5px;
        cursor: pointer;
        font-size: 20px;
        margin-top: 10px;
        font-family: var(--font-secondary);
    }

    .btn:hover {
        background-color: #C78E61;
    }

    .cancel {
        background-color: white;
        color: #0056b3;
        border: 1px solid #0056b3;
    }

    .cancel:hover {
        color: white;
    }
</style>

<div class="container">

    <form action='/api/emp_editProfile' method="POST" onsubmit="return checkInfo()">
        <% data.forEach((item)=>{ %>
            <input type="hidden" name="id" value="<%= item.id %>">
            <div class="form-container">
                <div class="form-group">
                    <label>First Name:</label>
                    <input type="text" value="<%= item.fname %>" id="fname" name="fname">
                </div>
                <div class="form-group">
                    <label>Last Name:</label>
                    <input type="text" value="<%= item.lname %>" id="lname" name="lname">
                </div>
                <div class="form-group">
                    <label>Phone:</label>
                    <input type="tel" value="<%= item.phone %>" id="phone" name="phone">
                </div>
                <div class="form-group">
                    <label>Address:</label>
                    <textarea id="address" name="address"><%= item.address %></textarea>
                </div>
                <div class="form-group">
                    <label>Email:</label>
                    <input type="email" value="<%= item.email %>" id="email" name="email">
                </div>
                    <input type="submit" value="Update" class="btn submit">
                <% }); %>
            </div>
    </form>
</div>

<script>
    function checkInfo() {
        const fname = document.getElementById('fname').value;
        const lname = document.getElementById('lname').value;
        const phone = document.getElementById('phone').value;
        const address = document.getElementById('address').value;
        const email = document.getElementById('email').value;
        const password = document.getElementById('password').value;
        const confirmPass = document.getElementById('confirmPass').value;

        if (!fname || !lname || !phone || !address || !email || !password) {
            alert('กรุณากรอกข้อมูลให้ครบ');
            return false;
        }

        if (password !== confirmPass) {
            document.getElementById('error_msg').innerText = "Passwords do not match!";
            alert('Passwords do not match!');
            return false;
        }

        return true;
    }
</script>

</body>

</html>