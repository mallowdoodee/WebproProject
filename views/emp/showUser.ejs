<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <style>
        a {
            text-decoration: none;
        }

        .edit {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 10px;
            width: 100%;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            margin-top: 10px;
        }

        .edit:hover {
            background-color: #0056b3;
        }

        .del {
            background-color: red;
            color: white;
            border: none;
            padding: 10px;
            width: 100%;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            margin-top: 10px;
        }

        .del:hover {
            background-color: rgb(200, 0, 0);
        }


    </style>
</head>
<body>
    <table>
        <thead>
            <tr>
                <th>id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Phone</th>
                <th>Address</th>
                <th>Email</th>
                <th>Role</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            <% data.forEach((item)=>{ %>
                <tr>
                    <td><%=item.id%></td>
                    <td><%=item.fname%></td>
                    <td><%=item.lname%></td>
                    <td><%=item.phone%></td>
                    <td><%=item.address%></td>
                    <td><%=item.email%></td>
                    <td><%=item.role%></td>
                    <td>
                        <!-- <button>Detail</button> -->
                        <a class="edit" href="/edit?id=<%=item.id%>">Edit</a>
                        <a class="del" href="">Delete</a>
                        
                    </td>
                </tr>
                <!-- <a href="/delete?id=<%=item.EmployeeId%>"><%=item.EmployeeId%></a> -->
            <% }); %> 

            
        </tbody>
    </table>
    
</body>
</html>