        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    h1 {
        font-size: 2rem;
        color: #580201;
    }

    .create {
        width: 70px;
        height: 70px;
        text-align: center;
        align-content: center;
        /* padding: 12px 24px; */
        background-color: #67C14B;
        color: white;
        text-decoration: none;
        cursor: pointer;
        font-weight: bold;
        border-radius: 50%;
        transition: opacity 0.3s ease;
        position: fixed;
        bottom: 20px;
        right: 30px;
    }

    .table-container {
        width: 100%;
        margin: 0 auto;
    }

    table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 10px;
    }

    th, td {
        padding: 12px;
        text-align: left;
    }

    th {
        font-weight: bold;
        color: #A56037;
        border-bottom: 1px solid #E5CFC5;
        border-top: 1px solid #E5CFC5;
    }

    td {
        background-color: #fff;
        opacity: 0.9;
        border-radius: 3px;
    }

    .edit, .del {
        text-decoration: none;
        padding: 8px 16px;
        color: white;
        cursor: pointer;
        font-weight: bold;
        border-radius: 5px;
        transition: opacity 0.3s ease;
    }

    .edit {
        background-color: #D8A273;
    }

    .del {
        background-color: #BF3F3F;
        margin-top: 15px;
        border: none;
    }

    .edit:hover, .del:hover, .create:hover {
        opacity: 0.8;
    }

    #edit_del {
        display: inline-block;
    }

    .noitems {
        display: flex;
        margin-top: 5%;
        justify-content: center;
        color: #A56037;
    }
</style>

<div class="container">
    <div class="head">
        <h1>Manage User</h1>
        <form action="/emp/manages" method="GET">
            <input type="text" name="search" placeholder="Search users...">
            <button type="submit">Search</button>
        </form>
    </div>
    <a class="create" href="/emp/create">+ Add</a>

    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Phone</th>
                    <th>Address</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if(!notFound) { %>
                    <% data.forEach((item) => { %>
                        <tr>
                            <td><%= item.fname %></td>
                            <td><%= item.lname %></td>
                            <td><%= item.phone %></td>
                            <td><%= item.address %></td>
                            <td><%= item.email %></td>
                            <td><%= item.role %></td>
                            <td>
                                <a class="edit" href="/emp/edit?id=<%= item.id %>">Edit</a><br>
                                <form id="edit_del" action="/api/emp_deleteuser" method="POST" onsubmit="return confirm('Are you sure you want to delete this user?')">
                                    <input type="hidden" name="id" value="<%= item.id %>">
                                    <input type="submit" value="Delete" class="del">
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                <% } else { %>
            </tbody>       
        </table>
    </div>
    
    <div class="noitems">No items avaliable.</div>
    <% } %>  
    
</div>

