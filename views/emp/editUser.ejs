<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Styled Form</title>
    <style>
        .form-container {
            padding: 20px;
            border-radius: 8px;
            width: 350px;
        }

        .form-group {
            display: flex;
            flex-direction: column;
            margin-bottom: 10px;
        }

        label {
            font-weight: bold;
            margin-bottom: 5px;
        }

        input, textarea {
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        textarea {
            resize: none;
            height: 60px;
        }

        .error-message {
            font-size: 12px;
            margin-top: 5px;
        }

        a {
            text-decoration: none;
        }

        .btn {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 10px;
            width: 100%;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            margin-top: 10px;
        }

        .btn:hover {
            background-color: #0056b3;
        }

        .cancel {
            background-color: white;
            color: #0056b3;
            border: 1px solid #0056b3;
        }

        .cancel:hover {
            color: white;
        }
    </style>
</head>
<body>

    <div class="form-container">
        <form>
            <% data.forEach((item)=>{ %>
                <div class="form-group">
                    <label>First Name:</label>
                    <input type="text" value="<%=item.fname%>" id="fname" name="fname">
                </div>
                <div class="form-group">
                    <label>Last Name:</label>
                    <input type="text" value="<%=item.lname%>" id="lname" name="lname">
                </div>
                <div class="form-group">
                    <label>Phone:</label>
                    <input type="text" value="<%=item.phone%>" id="phone" name="phone">
                </div>
                <div class="form-group">
                    <label>Address:</label>
                    <textarea id="address" name="address"><%=item.address%></textarea>
                </div>
                <div class="form-group">
                    <label>Email:</label>
                    <input type="email" value="<%=item.email%>" id="email" name="email">
                </div>
            <% }); %> 
            <div class="form-group">
                <label>Password:</label>
                <input type="password" id="password" name="password" onkeyup="checkPass()">
            </div>
            <div class="form-group">
                <label>Confirm Password:</label>
                <input type="password" id="confirmPass" onkeyup="checkPass()">
                <p id="error_msg" class="error-message" style="color: red;"></p>
            </div>
            <a class="btn" href="">Submit</a>
            <a class="btn cancel" href="/emp_route">Cancel</a>
        </form>
    </div>

    <script>
        function checkPass() {
            let pass = document.getElementById('password').value;
            let confirm = document.getElementById('confirmPass').value;
            let err_msg = document.getElementById('error_msg');

            if (confirm === "") {
                err_msg.textContent = "";
            } else if (confirm !== pass) {
                err_msg.textContent = "Password do not match!";
                err_msg.style.color = "red";
            } else {
                err_msg.textContent = "Password match";
                err_msg.style.color = "green";
            }
        }
    </script>

</body>
</html>
