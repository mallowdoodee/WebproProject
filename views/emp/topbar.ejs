<style>
    body {
        margin: 0;
        padding: 0;
    }

    /* .nav-container {
        display: flex;
        justify-content: space-around;
        align-items: center;
        height: 60px;
        background-color: #F2E9E4;
    } */

    .brand a {
        color: #580201;
    }

    #account {
        position: relative;
        display: flex;
        flex-direction: column;
        align-items: center;
        cursor: pointer;
    }

    .dropdown-menu {
        position: absolute;
        font-size: 15px;
        top: 100%;
        right: 0;
        background-color: #F9F9F9;
        min-width: 160px;
        box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.2);
        z-index: 1;
        display: none;
    }

    #edit, #logout {
        color: #A56037;
        padding: 12px 16px;
        border: none;
        display: block;
        cursor: pointer;
        box-sizing: border-box;
        width: 100%;
        text-align: center;
    }

    #edit {
        border-bottom: 2px solid #F5F5F5;
    }

    #account:hover .dropdown-menu {
        display: block;
    }

    #edit:hover, #logout:hover {
        background-color: #A56037;
        color: white;
    }

    a {
        text-decoration: none;
    }
</style>

<div class="fixed z-50 bar-custom shadow-xl shadow-gray-600/10 w-full px-10 py-3 flex items-center gap-x-4">
    <div class="brand">
        <a href="/emp/home">
            <h1 class="font-logo text-3xl" style="color: var(--color-red);">Celestar</h1>
        </a>     
    </div>

    <div class="ml-auto flex space-x-6 font-secondary" id="account">
        <p style="color: var(--color-red);"><%=  user.email %></p>
        <div class="dropdown-menu">
            <a href="/emp/profile?id=<%= user.id %>" id="edit">My Profile</a>

            <form action="/emp/logout" method="POST">
                <input id="logout" type="submit" value="Log Out">
            </form>
        </div>
    </div>
</div>
