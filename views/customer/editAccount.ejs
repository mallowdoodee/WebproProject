            <% data.forEach((item)=>{ %>
            <form onsubmit="return checkInfo()">
                <!-- <input type="hidden" name="id" value="<%= item.id %>"> -->
                <div class="grid grid-cols-2 gap-4 items-center font-thai pt-10">
                    <div class="flex flex-col">
                        <label class="text-gray-700 font-semibold">ชื่อ</label>
                        <input class="border rounded-md p-2 w-full" type="text" value="<%= item.fname %>" id="fname" name="fname">
                    </div>
                    <div class="flex flex-col font-thai">
                        <label class="text-gray-700 font-semibold">นามสกุล</label>
                        <input class="border rounded-md p-2 w-full" type="text" value="<%= item.lname %>" id="lname" name="lname">
                    </div>
                </div>
                
                <div class="grid grid-cols-2 gap-4 items-center font-thai">
                    <div class="mt-4 font-thai">
                        <label class="text-gray-700 font-semibold">เบอร์</label>
                        <input class="border rounded-md p-2 w-full mt-1" type="tel" value="<%= item.phone %>" id="phone" name="phone">
                    </div>
                    <div class="mt-4 font-thai">
                        <label class="text-gray-700 font-semibold">EMAIL ADDRESS</label>
                        <input class="border rounded-md p-2 w-full mt-1" id="address" name="address"value=<%= item.address %>>
                    </div>
                </div>

                <!-- ที่อนู่ -->
                <div class="mt-4 font-thai">
                    <label class="text-gray-700 font-semibold">ที่อยู่</label>
                    <textarea class="border rounded-md p-3 w-full mt-1 h-20 resize-none" type="textarea" value="<%= item.displayName %>" id="displayName" name="displayName"></textarea>
                </div>
                
                    <input type="submit" value="บันทึกการเปลี่ยนแปลง" class="btn submit font-thai mt-2">
                </div>
            </form>
        <% }); %>
    <!-- </div> -->

    <script>
        function checkInfo() {
            const fname = document.getElementById('fname').value;
            const lname = document.getElementById('lname').value;
            const phone = document.getElementById('phone').value;
            const address = document.getElementById('address').value;
            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;
            const confirmPass = document.getElementById('confirmPass').value;

            if (!fname || !lname || !phone || !address || !email || !password) {
                alert('กรุณากรอกข้อมูลให้ครบ');
                return false;
            }

            if (password !== confirmPass) {
                document.getElementById('error_msg').innerText = "Passwords do not match!";
                alert('Passwords do not match!');
                return false;
            }

            return true;
        }
    </script>


