<style>
    .form-container {
        padding: 20px;
        border-radius: 8px;
        width: 350px;
    }

    .form-group {
        display: flex;
        flex-direction: column;
        margin-bottom: 10px;
    }

    label {
        font-weight: bold;
        margin-bottom: 5px;
    }

    input,
    textarea,
    select {
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    textarea {
        resize: none;
        height: 60px;
    }

    .error-message {
        font-size: 12px;
        margin-top: 5px;
    }

    a {
        text-decoration: none;
    }

    .btn {
        background-color: var(--color-pink);
        color: white;
        border: none;
        padding: 10px;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
        margin-top: 10px;
    }

    .btn:hover {
        background-color: var(--color-bs);
    }

    .cancel {
        background-color: white;
        color: #0056b3;
        border: 1px solid #0056b3;
    }

    .cancel:hover {
        color: white;
    }

    input:focus, textarea:focus {
        outline: 2px solid var(--color-pink) !important;
        box-shadow: 0 0 8px var(--color-softpink) !important;
        transition: all 0.1s ease-in-out;
        outline: none;
    }
</style>
<div class="flex justify-center items-center w-full text-center pt-5 gap-1">
    <p class="text-gray-700 font-basetext flex items-center gap-2">
        Welcome to a world of elegance, 
        <strong><%= user.email.split('@')[0] %>✨</strong>
        <span class="text-gray-700">( Not you?</span>
        <form action="/logout" method="POST" class="inline"> 
            <button type="submit" class="font-bold transition-all duration-200 group">
                <span class="text-[var(--color-pink)] group-hover:text-[var(--color-softbs)] group-hover:underline">
                    Log out
                </span>
            </button>
        </form>

        <span class="text-yellow-400 text-lg">ᯓ★</span>
        <span class="text-gray-700 font-basetext">)</span>
    </p>
</div>


        <% data.forEach((item)=>{ %>
            <form class="mx-50">
                <div class="grid grid-cols-2 gap-4 font-thai pt-5">
                    <!-- ชื่อ และ นามสกุล -->
                    <div class="flex flex-col">
                        <label class="text-gray-700 font-semibold">ชื่อ</label>
                        <input class="border rounded-md p-2 w-full" type="text" value="<%= item.fname %>" id="fname" name="fname">
                    </div>
                    <div class="flex flex-col">
                        <label class="text-gray-700 font-semibold">นามสกุล</label>
                        <input class="border rounded-md p-2 w-full" type="text" value="<%= item.lname %>" id="lname" name="lname">
                    </div>
                </div>
                
                <div class="grid grid-cols-2 gap-4 font-thai">
                    <!-- เบอร์โทรศัพท์ (Phone) -->
                    <div class="mt-4 font-thai">
                        <label class="text-gray-700 font-semibold">เบอร์โทรศัพท์</label>
                        <input class="border rounded-md p-2 w-full mt-1" type="tel" value="<%= item.phone %>" id="phone" name="phone">
                    </div>
                    
                    <!-- EMAIL ADDRESS -->
                    <div class="mt-4 font-thai">
                        <label class="text-gray-700 font-semibold">EMAIL ADDRESS</label>
                        <input class="border rounded-md p-2 w-full mt-1" type="email" value="<%= item.email %>" id="email" name="email" readonly>
                    </div>
                </div>
            
                <!-- ที่อยู่ -->
                <div class="mt-4 font-thai">
                    <label class="text-gray-700 font-semibold">ที่อยู่</label>
                    <textarea class="border rounded-md p-3 w-full mt-1 h-20 resize-none" id="address" name="address"><%= item.address %></textarea>
                </div>
            
                <!-- ปุ่มบันทึก -->
                <button type="button" class="btn submit font-thai mt-4" onclick="change_info(event)">บันทึกการเปลี่ยนแปลง</button>
            </form>
            
        <% }); %>
