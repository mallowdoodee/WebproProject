        /* TAILWIND.css */
        :root {
            --font-basetext: "Poppins", serif;
            --font-weight-basetext: 400;
            --font-style-basetext: normal;
            --font-secondary: 'Jomolhari', serif;
            --font-weight-secondary: 400;
            --font-style-secondary: normal;
            --font-logo: "Fraunces", serif;
            --font-weight-logo: 600;
            --font-style-logo: normal;
            --font-thai: "Noto Sans Thai", sans-serif;
            --font-weight-thai: 400;
            --font-style-thai: normal;
            --font-thaiS: "Noto Sans Thai", sans-serif;
            --font-weight-thaiS: 700;
            --font-style-thaiS: normal;
            --color-red: #580201;
            --color-veryred: #450100;
            --color-bs: #A56037;
            --color-bg: #F0E9E9;
            --color-bar: #F2E9E4;
            --color-white: #FFFFFF;
            --color-pink: #BF8579;
            --color-softpink: #EDD1CC;
        }

        html {
            scroll-behavior: smooth;
        }

        .font-basetext {
            font-family: var(--font-basetext);
            font-weight: var(--font-weight-basetext);
            font-style: var(--font-style-basetext);
        }

        .font-secondary {
            font-family: var(--font-secondary);
            font-weight: var(--font-weight-secondary);
            font-style: var(--font-style-secondary);
        }

        .font-logo {
            font-family: var(--font-logo);
            font-weight: var(--font-weight-logo);
            font-style: var(--font-style-logo);
        }

        .font-thai {
            font-family: var(--font-thai);
            font-weight: var(--font-weight-thai);
            font-style: var(--font-style-thai);
        }

        .custom-input:focus {
            --tw-ring-color: var(--color-red);
        }

        .custom-ring {
            --tw-ring-width: 1.5px;
        }

        .bg-custom {
            background-color: var(--color-bg);
        }

        .bar-custom {
            background-color: var(--color-bar);
        }

        .fill-custom-red {
            fill: var(--color-red);
        }

        .article-bg {
            width: 100%;
            height: 100vh;
            background-image: url('pic/bg.png');
            background-size: cover;
            background-position: center;
            position: relative;
        }

        /* เพิ่มเลเยอร์โปร่งใสให้เฉพาะ background */
        .article-bg::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(255, 255, 255, 0.7);
            /* ปรับความโปร่งใสที่นี่ */
            z-index: 0;
        }

        /* ทำให้ text อยู่เหนือ background */
        .article-bg>* {
            position: relative;
            z-index: 1;
        }

        section {
            width: 100%;
            height: 100%;
        }

        .category {
            background-color: #BF8579;
            border-radius: 20px;
            /* height: 100px; */
            /* text-align: center; */
        }

        .category h1 {
            /* margin: 0;*/
            padding: 20px;
            font-weight: 700;
        }

        .group a,
        .group button {
            cursor: pointer;
            /* Ensures the cursor becomes a hand when hovering over <a> or <button> */
        }

        .menuButton {
            border: none;
        }

        .group button {
            cursor: pointer;
            /* Change cursor to hand when hovering */
            transition: background-color 0.3s ease, color 0.3s ease;
            /* Optional: smooth transition */
        }

        .group button:hover {
            background-color: #F2E9E4   ;
            color: #BF8579;
        }   
    </style>
</head>

